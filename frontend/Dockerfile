FROM node:20-alpine

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

ARG NEXT_PUBLIC_ACCESS_CODE
ARG NEXT_PUBLIC_API_URL

ENV NEXT_PUBLIC_ACCESS_CODE=${NEXT_PUBLIC_ACCESS_CODE}
ENV NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}

RUN npm run build

ENV PORT=3000

EXPOSE ${PORT}

CMD ["sh", "-c", "npx next start -p $PORT"]